<Window x:Class="FileInputBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:MyLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="800" >
    <StackPanel Margin="20" lib:FileInputBox.FileNameChanged="StackPanel_FileNameChanged"><!--пример демонстриующий работу RoutedChaned будет позже-->
        <lib:FileInputBox x:Name="fibUI" FileNameChanged="fibUI_FileNameChanged" FileName="C:\Temp\text.txt"></lib:FileInputBox>

    </StackPanel>
</Window>
