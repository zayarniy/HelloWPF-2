<Window x:Class="DOCKPANEL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOCKPANEL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel VerticalAlignment="Top" LastChildFill="True">
        <Button  Content="Top" DockPanel.Dock="Top" Background="#FFC32E2E" Click="Button_Click"/>
        <Button  Content="Bottom" DockPanel.Dock="Bottom"/>
        <Button  Content="Right" DockPanel.Dock="Right"/>
        <Button  Content="Left" DockPanel.Dock="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Calendar/>
    </DockPanel>
</Window>
