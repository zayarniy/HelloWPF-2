<Window x:Class="CommandsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandsExample"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:CommandsExample.ViewModel"
        Title="MainWindow" Height="100" Width="85" x:Name="wndMainWindow">
    <Window.DataContext>
        <vm:ViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBox x:Name="tbText" Text="Text2"/>
        <Button Command="{Binding Command1}" CommandParameter="{Binding ElementName=tbText,Path=Text}" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
     
    </StackPanel>
</Window>
