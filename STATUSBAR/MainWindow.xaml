<Window x:Class="STATUSBAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STATUSBAR"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Height="30" RenderOptions.BitmapScalingMode="HighQuality">
            <StatusBarItem>
                <Label>27 Items</Label>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                <Label>Zoom</Label>
                <ComboBox SelectedIndex="0">
                    <ComboBoxItem>100%</ComboBoxItem>
                    <ComboBoxItem>75%</ComboBoxItem>
                    <ComboBoxItem>50%</ComboBoxItem>
                    <ComboBoxItem>25%</ComboBoxItem>
                </ComboBox>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <Button>
                <Image Source="justify.gif"/>
            </Button>
        </StatusBar>
    </DockPanel>
</Window>
