<Window x:Class="FileInputBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:MyLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <lib:FileInputBox x:Name="fibUI" FileName="C:\1.txt" FileNameChanged="fibUI_FileNameChanged"></lib:FileInputBox>
        <Label Content="{Binding ElementName=fibUI, Path=FileName}"/>
        <!--<lib:FileInputBox x:Name="fibUI">C:\\</lib:FileInputBox>-->
        <!--<lib:FileInputBox x:Name="fibUI" Content="C:\\"></lib:FileInputBox>-->

    </StackPanel>
</Window>
