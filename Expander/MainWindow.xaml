<Window x:Class="Expander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expander"
        mc:Ignorable="d"
        Title="MainWindow" Height="192" Width="212">
    <DockPanel>
        <Expander Header="Choice">
            <StackPanel>
                <CheckBox>First option</CheckBox>
                <CheckBox>Second option</CheckBox>
                <CheckBox>Third option</CheckBox>
            </StackPanel>
        </Expander>
    </DockPanel>
</Window>
